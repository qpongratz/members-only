<div class = "post" id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>By:</strong>
    <% if user_signed_in? %>
      <%= post.user.name %>
    <% else %>
      Anonymous
    <% end %>
  </p>

</div>
