<div class = "post" id="<%= dom_id post %>">
  <p class = 'title' >
    <%= post.title %>
  </p>

  <p class = 'body' >
    <%= post.body %>
  </p>

  <p class = 'author' >
    <strong>By:</strong>
    <% if user_signed_in? %>
      <%= post.user.name %>
    <% else %>
      Anonymous
    <% end %>
  </p>

</div>
